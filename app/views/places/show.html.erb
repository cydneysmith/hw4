<div class = "ps-2 pe-2">
  <h1><%= @place["name"] %></h1>

  <p>
    <a class= "btn btn-dark" href="/posts/new?place_id=<%= @place["id"]%>"  role = "button" >New Post</a>
  </p>


  <% if @current_user %>

  <div class="row">
    <% for post in @posts %>
      <div class="col-lg-4 pb-2"> <!-- col-sm-6 -->
        <h3><%= post["title"] %></h3>
        <h4><%= post["posted_on"] %></h4>
        <p><%= post["description"] %></p>
      </div>
    <% end %>
  </div>

  <% else %>
  Please <a href="/login">log in</a> to see your posts.
  <% end%>



  <p>
    <a href="/places">Back to All Places</a>
  </p>
</div>